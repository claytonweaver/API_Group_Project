<body class=" bg-dark">

    @model MovieDetails
    @{
        ViewData["Title"] = "MovieDetails";
    }

    <h1 class="text-white">Media Details</h1>



    <div class="container">
        <div class="row">
            @{
                bool hasImage = true;
                if (!hasImage)
                {
                    <img src="@Model.Poster" class="rounded" /><br />
                }
                else
                {
                 <h2 class="text-white"> No image for this media</h2>
                }

            }
        </div><br />
        
            <table class="table table-dark">
                <tr>
                    <th>Title</th>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <th>Year</th>
                    <td>@Model.Year</td>
                </tr>
                <tr>
                    <th>Plot</th>
                    <td>@Model.Plot</td>
                </tr>
                <tr>
                    <th>Runtime</th>
                    <td>@Model.Runtime</td>
                </tr>
                <tr>
                    <th>Metacritic</th>
                    @{

                        bool hasScore = true;
                        if (!hasScore)
                        {
                            string criticScore = @Model.Metascore;
                            int score = int.Parse(criticScore);
                            if (score >= 75)
                            {
                                <td><div class="btn btn-success">@Model.Metascore</div></td>
                            }
                            else if (score < 75)
                            {
                                <td><div class="btn btn-danger">@Model.Metascore</div></td>

                            }
                        }
                        else
                        {

                        }




                    }


                </tr>
            </table>
        </div>
        
    
</body>