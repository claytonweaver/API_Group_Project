

    @model MovieDetails
    @{
        ViewData["Title"] = "MovieDetails";
    }

    <h1 class="text-white">Media Details</h1>



    <div class="container">
        <div class="flex-column">
            @{
                

                if (@Model.Poster != "N/A")
                {
                    <img src="@Model.Poster" class="rounded" /><br />
                }
                else
                {
                 <h3 class="text-white"> No image present for current media.</h3>
                }

            }
        </div><br />
              <div class="flex-column">
                  <table class="table table-dark">
                      <tr>
                          <th>Title</th>
                          <td>@Model.Title</td>
                      </tr>
                      <tr>
                          <th>Year</th>
                          <td>@Model.Year</td>
                      </tr>
                      <tr>
                          <th>Plot</th>
                          <td>@Model.Plot</td>
                      </tr>
                      <tr>
                          <th>Runtime</th>
                          <td>@Model.Runtime</td>
                      </tr>
                      <tr>
                          <th>Metacritic</th>
                          @{


                              if (Model.Metascore != "N/A")
                              {
                                  string criticScore = @Model.Metascore;
                                  int score = int.Parse(criticScore);
                                  if (score >= 75)
                                  {
                                      <td><div class="btn btn-success">@Model.Metascore</div></td>
                                  }
                                  else if (score < 75)
                                  {
                                      <td><div class="btn btn-danger">@Model.Metascore</div></td>

                                  }
                              }
                              else
                              {
                   
                                      <td>N/A</td>
                                  
                              }

                          }
                          <td><button class="btn btn-success text-light" onclick="window.location.href='../Home/MovieTrailer?title=@Model.Title&year=@Model.Year'">See Trailer</button></td>
                      </tr>
                  </table>
              </div>
        </div>

