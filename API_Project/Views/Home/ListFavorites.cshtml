@model List<FavoriteMovies>
@{
    ViewData["Title"] = "ListFavorites";

    


}

<h1>ListFavorites</h1>

<table class="table table-striped">
    <tr class="bg-secondary text-light">
        <th>Title</th>
        <th>Year</th>
        <th>User Rating</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (FavoriteMovies movie in Model)
    {
        
            <tr>
                <td><a href="../Home/MovieDetails?id=@movie.MovieId">@movie.Title</a></td>
                <td>@movie.MovieYear</td>
                <td><form><label>User Rating<input type="range" name="userRating" value="@movie.UserRating" id="ageInputId" min="0" max="100" oninput="ageOutputId.value = ageInputId.value"></label><output name="ageOutputName" id="ageOutputId">@movie.UserRating</output><span>/100</span> <input type="submit" value="submit" /></form></td>
                <td><button class="btn btn-dark btn-outline-danger" onclick="window.location.href='../Home/DeleteFavorite?id=@movie.Id'">üóëÔ∏è</button></td>
            </tr>
        
    }
</table>

